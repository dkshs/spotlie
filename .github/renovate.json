{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>dkshs/renovate-config:ts"],
  "packageRules": [
    {
      "enabled": false,
      "matchDatasources": ["docker"],
      "matchDepPatterns": ["python"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "enabled": false,
      "matchDatasources": ["pypi"],
      "matchDepNames": ["django"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "matchFileNames": ["frontend/**"],
      "semanticCommitScope": "frontend-deps"
    },
    {
      "matchFileNames": ["backend/**"],
      "semanticCommitScope": "backend-deps"
    }
  ],
  "pip_requirements": {
    "fileMatch": [
      "(^|/)[\\w-]*requirements(-\\w+)?\\.(txt|pip)$",
      "^.*/requirements/.*.txt$"
    ]
  }
}
