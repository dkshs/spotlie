{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>dkshs/renovate-config"
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "matchDepNames": [
        "/python/"
      ]
    },
    {
      "enabled": false,
      "matchDatasources": [
        "pypi"
      ],
      "matchDepNames": [
        "django"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ]
    },
    {
      "matchFileNames": [
        "frontend/**"
      ],
      "semanticCommitScope": "frontend-deps"
    },
    {
      "matchFileNames": [
        "backend/**"
      ],
      "semanticCommitScope": "backend-deps"
    }
  ]
}
